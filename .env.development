# Django 项目环境变量配置（开发环境）
# 此文件用于开发环境，不要提交到版本控制

# Django 核心配置
SECRET_KEY=django-insecure-development-key-change-this-for-production
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0

# 数据库配置（SQLite - 开发环境）
DATABASE_URL=sqlite:///db.sqlite3

# Redis 缓存配置
REDIS_URL=redis://127.0.0.1:6379/1

# JWT 配置
JWT_SECRET_KEY=django-insecure-jwt-secret-key-change-this-for-production
JWT_EXPIRATION_HOURS=24
JWT_REFRESH_EXPIRATION_DAYS=7

# CORS 配置
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,http://localhost:8080,http://127.0.0.1:8080

# 邮件配置（控制台输出 - 开发环境）
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend

# 文件上传配置
MEDIA_ROOT=./media
STATIC_ROOT=./staticfiles

# 日志配置
LOG_LEVEL=DEBUG